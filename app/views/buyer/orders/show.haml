- order = @order.decorate

.col-md-12
  .panel{:class => order.panel_class}
    .panel-heading
      .pull-left Order Detail: #{order}
      .pull-right
        = link_to 'Back', [:buyer, :orders],
          :class => 'btn btn-default btn-xs'
        - if order.editable?
          = link_to 'Edit', [:edit, :buyer, order],
            :class => 'btn btn-default btn-xs'
        - if order.open?
          = link_to 'Close Order', [:close, :buyer, order],
            :class => 'btn btn-danger btn-xs',
            :method => :put,
            :data => {:confirm => 'Are you sure you want to close this order?'}

      .clearfix
    .panel-body
      = render :partial => 'buyer/orders/partials/details',
        :locals => {:order => order}

- if order.bids.any?
  = render :partial => 'buyer/orders/partials/bid',
    :collection => order.bids,
    :locals => {:order => order}
- else
  .col-md-12
    .panel{:class => order.panel_class}
      .panel-heading Bids
      .panel-body
        %h4 No bids have been made yet.

.page-header
  .pull-left
    %h1 Orders
  .pull-right
    = link_to '+ New', [:new, :buyer, :order],
      :class => 'btn btn-primary'

  .clearfix

%table.table.table-condensed.table-striped.table-hover
  %thead
    %tr
      %th Item
      %th Status
      %th Created At
      %th # of Bids
      %th
  %tbody
    - @orders.decorate.each do |order|
      %tr
        %td= order
        %td= order.status
        %td= order.created_at
        %td= order.no_of_bids
        %td
          = link_to 'Show', [:buyer, order],
            :class => 'btn btn-default btn-sm'
          = link_to 'Edit', [:edit, :buyer, order],
            :class => 'btn btn-primary btn-sm'

- bid = bid.decorate

.col-md-12
  .panel{:class => bid.panel_class}
    .panel-heading
      .pull-left
        Bid by #{bid.bidder}
        - if bid.withdrawed?
          (#{bid.status})
      .pull-right
        = link_to 'View', [:buyer, bid],
          :class => 'btn btn-info btn-xs'

      .clearfix

    .panel-body
      = raw bid

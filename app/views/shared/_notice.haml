- if flash[:alert]
  .alert.alert-danger
    = flash[:alert]

- if flash[:success]
  .alert.alert-success
    = flash[:success]

- if flash[:notice]
  .alert.alert-info
    = flash[:notice]

- if flash[:error]
  .alert.alert-danger
    %ul.list-unstyled
      = list_of flash[:error] do |error|
        = error
-#
-# locals:
-#   owner
-#   account
-#

- show_delete = local_assigns[:show_delete] || false

%table.table.table-condensed.table-striped.table-hover
  %thead
    %tr
      %th File
      %th Upload Date
      - if show_delete
        %th
  %tbody.js-attachment-container
    = render :partial => 'attachments/attachment',
      :collection => owner.attachments.by_latest.decorate,
      :locals => {:account => account, :show_delete => show_delete}

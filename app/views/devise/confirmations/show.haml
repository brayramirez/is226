.page-header
  %h1 Set Password

= form_for @user,
  :url => {:controller => 'users/confirmations',
    :action => 'update'},
  :method => :put,
  :html => {:class => 'form-horizontal'} do |f|

  = f.hidden_field :confirmation_token

  .form-group
    .col-sm-5
      = f.password_field :password,
        :placeholder => 'Password',
        :class => 'form-control'

  .form-group
    .col-sm-5
      = f.password_field :password_confirmation,
        :placeholder => 'Re-type Password',
        :class => 'form-control'

  .form-group
    .col-sm-5
      = f.submit 'Save password and confirm account',
        :class => 'btn btn-primary col-sm-12'

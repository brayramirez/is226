.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      = link_to 'IS226', [:admin, :root], :class => 'navbar-brand'

    %ul.nav.navbar-nav.navbar-left
      %li= link_to 'Categories', [:admin, :categories]
      %li.dropdown
        = link_to "User Accounts<span class='caret'></span>".html_safe, '#',
          :class => 'dropdown-toggle',
          :data => {:toggle => 'dropdown'}
        %ul.dropdown-menu
          %li= link_to 'Administrators', [:admin, :admins]
          %li= link_to 'Buyers', [:admin, :buyers]
          %li= link_to 'Bidders', [:admin, :bidders]

    %ul.nav.navbar-nav.navbar-right
      %li.dropdown
        = link_to UserDecorator.decorate(current_user), '#',
          :class => 'dropdown-toggle',
          :data => {:toggle => 'dropdown'}
        %ul.dropdown-menu
          %li= link_to 'My Account', [:admin, :my_account]
          %li= link_to 'Log out', destroy_user_session_path, :method => :delete